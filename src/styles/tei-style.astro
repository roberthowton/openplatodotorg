---
import TeiBaseStyle from "./tei-base-style.astro";
---

<TeiBaseStyle />
<style is:inline>
  tei-note cetei-content {
    background-color: var(--color-bg-alt);
    border-radius: 4px;
    padding: 0.5em;
    margin: 0.5em 0;
  }
  tei-p {
    margin: 0;
  }
  tei-said {
    margin: 0;
  }

  .stephanus-line {
    min-height: 1.5em;
    line-height: 1.5;
    text-align-last: justify;
  }

  /* Hide inline markers by default, show block markers */
  .line-marker-inline {
    display: none;
  }

  /* When overflow detected (.inline-mode), show inline markers, continuous flow */
  .inline-mode .line-marker-inline {
    display: inline !important;
  }
  .inline-mode .line-marker-block {
    display: none !important;
  }
  .inline-mode tei-lb {
    display: inline !important;
  }
  .inline-mode .stephanus-line {
    display: inline !important;
    min-height: unset;
    text-align-last: auto;
  }
</style>
