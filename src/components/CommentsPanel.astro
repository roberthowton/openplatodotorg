---
// Side panel for displaying comments/commentary
---

<aside id="comments-panel" class="comments-panel collapsed">
  <button id="comments-panel-toggle" class="comments-panel-toggle" aria-label="Toggle commentary panel">
    <span class="toggle-label">COMMENTARY</span>
  </button>
  <header class="comments-panel-header">
    <h2>Commentary</h2>
    <div class="comments-panel-actions">
      <button id="comments-panel-pin" class="comments-panel-btn" aria-label="Pin panel" title="Pin panel">
        <svg class="icon-lock-open" width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M7 11V7C7 4.23858 9.23858 2 12 2C14.419 2 16.4367 3.71776 16.9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <rect x="5" y="11" width="14" height="11" rx="2" stroke="currentColor" stroke-width="2"/>
          <circle cx="12" cy="16" r="1.5" fill="currentColor"/>
        </svg>
        <svg class="icon-lock-closed" width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M7 11V7C7 4.23858 9.23858 2 12 2C14.7614 2 17 4.23858 17 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <rect x="5" y="11" width="14" height="11" rx="2" stroke="currentColor" stroke-width="2"/>
          <circle cx="12" cy="16" r="1.5" fill="currentColor"/>
        </svg>
      </button>
      <button id="comments-panel-close" class="comments-panel-btn" aria-label="Close panel" title="Close panel">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M6 6L18 18M6 18L18 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
  </header>
  <div id="comments-panel-content" class="comments-panel-content">
    <p class="comments-panel-empty">Click highlighted text to view commentary</p>
  </div>
</aside>

<script>
  import { initCommentsPanel } from "../scripts/commentsPanel";

  // Initialize on load and after view transitions
  initCommentsPanel();
  document.addEventListener("astro:after-swap", initCommentsPanel);
</script>

<style>
  .comments-panel {
    position: fixed;
    right: 0;
    top: 0;
    width: 320px;
    height: 100vh;
    background: var(--op-yellow);
    display: flex;
    flex-direction: column;
    z-index: 100;
    font-family: var(--font-body);
    color: var(--black-1);
    transition: transform var(--transition-normal);
  }

  .comments-panel.collapsed {
    transform: translateX(100%);
  }

  /* Vertical tab on right edge when collapsed */
  .comments-panel-toggle {
    position: absolute;
    left: -40px;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: auto;
    padding: var(--space-md) var(--space-xs);
    background: var(--op-yellow);
    border: none;
    border-radius: 8px 0 0 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 101;
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
  }

  .comments-panel-toggle:hover {
    filter: brightness(0.95);
  }

  .toggle-label {
    font-family: var(--font-display);
    font-weight: var(--weight-medium);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: var(--black-1);
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
  }

  /* Hide toggle when panel is open */
  .comments-panel:not(.collapsed) .comments-panel-toggle {
    opacity: 0;
    pointer-events: none;
  }

  .comments-panel-header {
    padding: var(--space-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .comments-panel-header h2 {
    margin: 0;
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: var(--weight-medium);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--black-1);
  }

  .comments-panel-actions {
    display: flex;
    gap: var(--space-sm);
  }

  .comments-panel-btn {
    background: none;
    border: none;
    padding: var(--space-xs);
    cursor: pointer;
    color: var(--black-1);
    opacity: 0.6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity var(--transition-fast);
  }

  .comments-panel-btn:hover {
    opacity: 1;
  }

  /* Lock icon states */
  .icon-lock-closed {
    display: none;
  }

  .comments-panel.pinned .icon-lock-open {
    display: none;
  }

  .comments-panel.pinned .icon-lock-closed {
    display: block;
  }

  .comments-panel.pinned #comments-panel-pin {
    opacity: 1;
  }

  /* Overlay mode shadow */
  .comments-panel:not(.collapsed):not(.pinned) {
    box-shadow: -4px 0 15px rgba(0, 0, 0, 0.15);
  }

  .comments-panel-content {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-md);
  }

  .comments-panel-empty {
    color: var(--black-1);
    opacity: 0.6;
    font-style: italic;
  }

  .comment-item {
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .comment-item:last-child {
    border-bottom: none;
  }

  .comment-item-id {
    font-size: 0.75rem;
    color: var(--black-1);
    opacity: 0.6;
    margin-bottom: var(--space-sm);
    font-family: monospace;
  }

  .comment-item-body {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--black-1);
  }

  /* Mobile: bottom sheet */
  @media (max-width: 768px) {
    .comments-panel {
      width: 100%;
      height: 50vh;
      top: auto;
      bottom: 0;
      border-radius: 16px 16px 0 0;
    }

    .comments-panel.collapsed {
      transform: translateY(100%);
    }

    .comments-panel-toggle {
      left: 50%;
      top: -48px;
      transform: translateX(-50%);
      width: auto;
      height: 40px;
      padding: var(--space-xs) var(--space-md);
      border-radius: 8px 8px 0 0;
      writing-mode: horizontal-tb;
    }

    .toggle-label {
      writing-mode: horizontal-tb;
      transform: none;
    }

    /* Hide pin button on mobile */
    #comments-panel-pin {
      display: none;
    }
  }

  /* Tablet - Portrait: no pin option, overlay only */
  @media (min-width: 769px) and (max-width: 1024px) and (orientation: portrait) {
    #comments-panel-pin {
      display: none;
    }
  }
</style>
